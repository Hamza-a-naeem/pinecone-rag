# Pinecone Configuration (get from https://app.pinecone.io)
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=company-docs

# Embedding Configuration - Using Local Embeddings (all-MiniLM-L6-v2)
# Set to false if you want to use OpenAI embeddings instead
USE_LOCAL_EMBEDDINGS=true
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# OpenAI API Key (only needed if USE_LOCAL_EMBEDDINGS=false)
# OPENAI_API_KEY=sk-your-openai-key-here

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
